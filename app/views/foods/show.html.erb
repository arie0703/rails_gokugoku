<div class="posts-container">
  <h1><%= @food.title %></h1>
  <div class="p-wrapper">
    <p>投稿者: <a href="/users/<%= @food.user.id %>"><%= @food.user.name %></a></p>
    <div class="body-container">
      <%= safe_join(@food.body.split("\n"),tag(:br)) %><br>
      <%= image_tag @food.image_url if @food.image? %>  
    </div>
  </div>
  <p class="time">投稿日: <%= @food.created_at.to_s(:datetime_jp) %></p>
  <h3>いいね: <%= @food.foodlikes.count %></h3>
  

  <!-- 投稿者なら編集・削除、それ以外のユーザーならいいねボタンを表示 -->
  <% if user_signed_in? && current_user.id == @food.user_id %> 
    <div class="btn"> 
      <%= link_to "編集", edit_food_path(@food.id) %>
    </div>
    <div class="btn">
      <%= link_to "削除", food_path(@food.id), data: { confirm: "投稿を削除しますか？" }, method: :delete %>
    </div>
    <% elsif user_signed_in? && current_user.id != @food.user_id %>
    <% if current_user.already_foodliked?(@food) %>
      <%= button_to '取り消し', food_foodlike_path(@food), method: :delete %>
    <% else %>
      <%= button_to 'いいね', food_foodlikes_path(@food) %>
    <% end %>
  <% end %>

  <div class="comment-wrapper">
    <h3>コメント一覧</h3>

    
    <% @foodcomments.each.with_index(1) do |c, i| %>
      <!-- 最新コメントとして空のコメントが表示されるバグがあったので、最新コメントが表示されない処理-->
      <% if i != @foodcomments.size %> 
        <div class="comment">
          [<%= i %>]
          <%= c.user.name unless c.user.blank? %>
          <% if user_signed_in? && current_user.id == c.user.id %>
            <%= link_to '削除', food_foodcomment_path(@food, c), data: { confirm: "コメントを削除しますか？" }, method: :delete %>
          <% end %>
          <br>
          <%= safe_join(c.foodcomment.split("\n"),tag(:br)) unless c.foodcomment.blank? %>
        </div>
        <br>
        
      <% end %>
    <% end %>
    
    <% if user_signed_in? %>
      <p>コメントを投稿する</p>
      <%= form_with(model: [@food, @foodcomment], local: true) do |f| %>
        <%= f.text_area :foodcomment%>
        <%= button_tag type: "submit" do %>
          <p>投稿</p>
        <% end %>
      <% end %>
      <% else %>
      <p>コメントを投稿するにはログインしてください。</p>
    <% end %>
  </div>
  
  <br>
  <div class ="btn">
    <%= link_to "戻る", foods_path %>
  </div>
</div>