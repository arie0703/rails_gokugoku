<div class="session-wrapper">
  <h1>gokugoku</h1>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, placeholder: "パスワード", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %> パスワードを記憶する
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "ログイン" , class: "login-btn"%>
    </div>

  
  <% end %>
  <div class ="twitter-login">
  <%= link_to 'Twitterでログイン', user_twitter_omniauth_authorize_path, class: "api_link"%>
  <i class="fab fa-twitter"></i>
  </div>
  <%= render "users/shared/links" %>

</div>
