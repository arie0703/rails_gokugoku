<div class="session-wrapper">

  <h1>My Profile</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :ユーザー名 %><br>
      <%= f.text_field :name, autofocus: true, placeholder: "ユーザー名", autocomplete: "name" %>
    </div>

    <div class="field">
      <%= f.text_area :profile, placeholder: "自己紹介", autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :アイコン %><br />
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :パスワード変更 %> <i>(変更したい場合は入力してください。)</i><br />
      <%= f.password_field :password, placeholder: "新パスワード", autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "新パスワード 再入力", autocomplete: "new-password" %>
    </div>

    <br>
    <div class="field">
      <%= f.label :変更を適用するにはパスワードを入力してください %> <i></i><br />
      <%= f.password_field :current_password, placeholder: "現在のパスワード", autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "更新" , class: "submit-btn" %>
    </div>
  <% end %>
  <br>

  <h3>退会</h3>

  <p>退会すると全てのデータが消されます。 <%= button_to "退会", registration_path(resource_name), data: { confirm: "この操作は取り消せません。本当に退会しますか？" }, method: :delete , class: "submit-btn" %></p>

  <%= link_to "戻る", :back, class: "session_link"%>

</div>
