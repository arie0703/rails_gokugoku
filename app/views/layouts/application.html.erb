<!DOCTYPE html>
<html>
  <head>
    <title>gokugoku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <h1><%= link_to "gokugoku", hello_index_path %></h1>
      <div class="header-list">
      <ul>
        <li><%= link_to "飲みメモ",  posts_path %></li>
        <li><%= link_to 'ギャラリー', fotos_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to "マイページ", user_path(current_user.id) %></li>
        <% else %>
        <li><%= link_to "ログイン", users_sign_in_path %></li>
        <% end %>
      </ul>
      </div>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>